package controller;

import javax.swing.JOptionPane;

import service.*;
import controller.*;
import domain.*;




public class ExamController {
	private static ExamController intance = new ExamController();
	public static ExamController getInstance() {return intance;}
	private ExamController() {};
	
	public static void main(String[] args) {


		while (true) {
			switch (JOptionPane.showInputDialog("0.EXIT 1. 2.")) {
			case "0":
				return;

			case "1":
				ExamBean exam = new ExamBean();
				exam.setExam_id(JOptionPane.showInputDialog("이름"));
				exam.setMonth(JOptionPane.showInputDialog("월"));

				break;
			case "2":
				SubjectBean subject = new SubjectBean();
				subject.setSub_name(JOptionPane.showInputDialog("JAVA 점수"));
			//	JOptionPane.showInputDialog("SQL 점수");
			//	JOptionPane.showInputDialog("HTML5 점수");
				//JOptionPane.showInputDialog("PYTHON 점수");

				break;
			case "3":
				break;

			default:
				break;
			}
		}

	}
}
